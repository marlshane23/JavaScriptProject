// create a variable to hold your NFT's
const myNFTs = []

// this function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT (name, age, gender, address) {
    const NFT = {
        "Name": name,
        "Age": age,
        "Gender": gender,
        "Address": address
    }
    myNFTs.push(NFT);
    if (myNFTs.length === 1) { 
        console.log("My NFT's:");
    }
    console.log("\t" + name + ", " + age + ", " + gender + ", " + address);
}
// create a "loop" that will go through an "array" of NFT's
// and print their metadata with console.log()
function listNFTs () {
    for(let i = 0; i < myNFTs.length; i++) {
        console.log("\nID: " + (i +1));
        console.log("Name: " + myNFTs[i].Name);
        console.log("Age: " + myNFTs[i].Age);
        console.log("Gender: " + myNFTs[i].Gender);
        console.log("Address: " + myNFTs[i].Address);
    }
}

// print the total number of NFTs we have minted to the console
function getTotalSupply() {
    console.log("\nTotal NFT's: " + myNFTs.length);
}

// call your functions below this line
mintNFT("Shane", "22", "Female", "Makati City");
mintNFT("Kyle", "23", "Male", "Manila");
mintNFT("Isabel", "25", "Female", "Batangas City");
mintNFT("Miguel", "19", "Male", "Malabon City");
listNFTs();
getTotalSupply();
